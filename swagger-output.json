{
  "openapi": "3.0.0",
  "info": {
    "title": "API REST - TRUCOFIPP",
    "description": "API PARA O JOGO DE TRUCO",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/"
    }
  ],
  "paths": {
    "/carta/": {
      "get": {
        "tags": [
          "Cartas"
        ],
        "summary": "Pegar 12 cartas",
        "description": "Essa rota pega 12 cartas do baralho",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/token": {
      "post": {
        "tags": [
          "Autenticacao"
        ],
        "summary": "Faz Login",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "senha": {
                    "type": "string"
                  }
                },
                "required": [
                  "email",
                  "senha"
                ]
              },
              "example": {
                "email": "danielaugustosant@hotmail.com",
                "senha": "12345"
              }
            }
          }
        }
      }
    },
    "/auth/cadastrar": {
      "post": {
        "tags": [
          "Autenticacao"
        ],
        "summary": "Cadastra um novo usuario",
        "description": "",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "senha": {
                    "type": "string"
                  }
                },
                "required": [
                  "nome",
                  "email",
                  "senha"
                ]
              },
              "example": {
                "nome": "Daniel Augusto",
                "email": "danielaugustosant@hotmail.com",
                "senha": "12345"
              }
            }
          }
        }
      }
    },
    "/auth/api/validarFront": {
      "post": {
        "tags": [
          "Autenticacao"
        ],
        "summary": "Valida baseado no cookie advindo do front-end",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "chave": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sala/": {
      "get": {
        "tags": [
          "Salas"
        ],
        "summary": "ListarSala",
        "description": "Essa rota lista as salas",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Salas"
        ],
        "summary": "Criar sala",
        "description": "Essa rota cria uma sala",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "example": "any"
                  },
                  "usuario_id": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sala/{id}": {
      "get": {
        "tags": [
          "Salas"
        ],
        "summary": "ListarSala",
        "description": "Essa rota lista as salas",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  },
  "components": {
    "schemas": {},
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}